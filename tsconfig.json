{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "es2020",
    "rootDir": "src",
    "sourceMap": true,
    "strict": true,
    "jsx": "react-jsx",
    "lib": ["es2020", "dom"],
    "moduleResolution": "nodenext",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "src/global.d.ts", "webpack.config.ts"],
  "exclude": ["node_modules"]
}
